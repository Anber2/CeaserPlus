<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/diet_bg3x"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/createAccountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:text="Profile Editing"
            android:textSize="18sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#c0c0c0" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editFirstNameTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="First Name"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textAlignment="center" />

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/input_layout_password"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--<EditText-->
                <!--android:id="@+id/firstNameTXT"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/username2x"-->
                <!--android:hint="PAssssssss" />-->

                <!--</android.support.design.widget.TextInputLayout>-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editLastNAmeTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editEmailTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:editable="false"
                    android:textAlignment="center" />
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_margin="5dp"-->
                <!--android:orientation="horizontal">-->

                <!--<EditText-->
                    <!--android:id="@+id/editConfirmEmailTXT"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:background="@drawable/username2x"-->
                    <!--android:gravity="center_vertical|center_horizontal"-->
                    <!--android:hint="Confirm Email"-->
                    <!--android:inputType="textEmailAddress"-->
                    <!--android:padding="5dp"-->
                    <!--android:textAlignment="center" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editGenderTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gender2x"
                    android:focusable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Gender"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editAgeCB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Age"
                    android:inputType="numberSigned"
                    android:padding="5dp"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editMobileTXT"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/username2x"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:textAlignment="center" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/oldPassswordTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Old Password"
                    android:padding="5dp"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editPassswordTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Password"
                    android:padding="5dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editConfirmaPassTXT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/username2x"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="Confirm Password"
                    android:padding="5dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveEditProfBTN"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal"


                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:text="SUBMIT"
                    android:textSize="18sp"
                    android:background="@drawable/btn_bg"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/resetEditProfBTN"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"

                    android:text="RESET"
                    android:textSize="18sp"
                    android:background="@drawable/btn_bg"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>