<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_ui"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/diet_thumb_image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginBottom="0dp"-->
                <!--android:layout_marginRight="2dp"-->
                <!--android:layout_marginTop="0dp"-->
                <!--android:padding="0dp"-->
                <!--app:srcCompat="@drawable/doctor2x" />-->

                <com.github.siyamed.shapeimageview.DiamondImageView
                    android:id="@+id/diet_thumb_image"
                    android:layout_width="110dp"
                    android:layout_height="170dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/faq_headr"
                    app:siBorderColor="@color/colorBlack">

                </com.github.siyamed.shapeimageview.DiamondImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_diet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:text="News Heading Dummy 1 "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diet_Period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 DES - " />

                    <TextView
                        android:id="@+id/MealCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="303 Cal"
                        android:textColor="#753951" />

                </LinearLayout>

                <TextView
                    android:id="@+id/MealDescription"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLength="150"
                    android:text="No Data" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/freezebtn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/my_button_bg"

                        android:text="Freeze Meal"
                        android:textColor="#008000"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/changebtn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/my_button_bg"
                        android:text="Change Meal"

                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>