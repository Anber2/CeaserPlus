<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_ui"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:descendantFocusability="blocksDescendants"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:text="Nutiration package 1"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="5dp"
                    android:weightSum="4">


                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/exp_date2x" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ActiveFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toEndOf="@+id/textView16"
                                android:layout_toRightOf="@+id/textView16"
                                android:singleLine="true"
                                android:text="2017-04-08"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/ActiveTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:singleLine="true"
                                android:text="Expt date"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="231dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_button_bg3"
                        android:padding="5dp"

                        app:srcCompat="@drawable/upgrade2x" />


                    <Button
                        android:id="@+id/upgread"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.10"
                        android:background="@drawable/my_button_bg3"
                        android:clickable="true"
                        android:text="upgread"
                        android:textColor="#008000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/my_button_bg4"
                        android:padding="5dp"

                        app:srcCompat="@drawable/reniew2x" />

                    <Button
                        android:id="@+id/renew"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"

                        android:background="@drawable/my_button_bg4"
                        android:text="renew"
                        android:textColor="#FF0000"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DEB887"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/MembershipFee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/my_button_bg2"
                    android:gravity="center"

                    android:padding="10dp"

                    android:text="Not Found"
                    android:textAllCaps="true"

                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>