<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:layout_above="@+id/linearLayout10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="509dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/linearLayout8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.github.siyamed.shapeimageview.DiamondImageView
                            android:id="@+id/profile_img"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/doctor3x"
                            app:siBorderWidth="2dp"
                            app:siBorderColor="@color/colorBlack">

                        </com.github.siyamed.shapeimageview.DiamondImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/linearLayout8"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="27dp"
                        android:layout_toEndOf="@+id/linearLayout8"
                        android:layout_toRightOf="@+id/linearLayout8"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/dite_title"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/border_one_side"
                            android:text="TextView"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/MealCalories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textColor="#FFA500" />

                        <TextView
                            android:id="@+id/diet_Period"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/MealDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout8"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:text="TextView" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:descendantFocusability="blocksDescendants"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/freezebtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/my_button_bg"
            android:text="Freeze Meal"
            android:textColor="#008000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/changebtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/my_button_bg"
            android:text="Change Meal"
            android:textColor="#FFA500"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>

